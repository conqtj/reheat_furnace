FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    billet
    {
        type            noSlip;
    }

    walls
    {
        type            noSlip;
    }

    burner_1
    {
        type                flowRateInletVelocity;
        massFlowRate        0.25*15;
        extrapolateProfile  yes;
        rho                 rho;
        rhoInlet            1.0;
        value               uniform (0 0 0);
    }
    
    burner_2
    {
        type                flowRateInletVelocity;
        massFlowRate        0.15*9;
        extrapolateProfile  yes;
        rho                 rho;
        rhoInlet            1.0;
        value               uniform (0 0 0);
    }
    
    exhaust
    {
        type            zeroGradient;
    }
}

