FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      G;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 0 -3 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    bottomWall
    {
        type            greyDiffusiveRadiation;
        emissivityMode  solidRadiation;
        emissivity      uniform 0.7;
        value           uniform 0;
    }

    sideWalls
    {
        type            greyDiffusiveRadiation;
        emissivityMode  solidRadiation;
        emissivity      uniform 0.9;
        value           uniform 0;
    }

    topWall
    {
        type            greyDiffusiveRadiation;
        emissivityMode  solidRadiation;
        emissivity      uniform 0.9;
        value           uniform 0;
    }

    "burnerTile.*"
    {
        type            MarshakRadiation;
        emissivityMode  lookup;
        emissivity      uniform 1.0;
        value           uniform 0;
    }

    "burnerA.*"
    {
        type            MarshakRadiation;
        emissivityMode  lookup;
        emissivity      uniform 1.0;
        value           uniform 0;
    }

    "burnerB.*"
    {
        type            MarshakRadiation;
        emissivityMode  lookup;
        emissivity      uniform 1.0;
        value           uniform 0;
    }

    exhaust
    {
        type            MarshakRadiation;
        emissivityMode  lookup;
        emissivity      uniform 1.0;
        value           uniform 0;
    }
}

