FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      H2O;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -1 -2 0 0 0 0];

internalField   uniform 0.1;

boundaryField
{
    bottomWall
    {
        type            zeroGradient;
    }

    sideWalls
    {
        type            zeroGradient;
    }

    topWall
    {
        type            zeroGradient;
    }

    "burnerTile.*"
    {
        type            zeroGradient;
    }

    "burnerA.*"
    {
        type            fixedValue;
        value           uniform 0.1;
    }

    "burnerB.*"
    {
        type            fixedValue;
        value           uniform 0.1;
    }

    exhaust
    {
        type            zeroGradient;
    }
}

